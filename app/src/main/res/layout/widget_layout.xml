        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/widget_text_secondary"
