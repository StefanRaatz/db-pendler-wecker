<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header with stations -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_from_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Von" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†“"
                android:textColor="#757575"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_to_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Nach" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_swap"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#1E88E5"
            android:src="@drawable/ic_swap"
            android:contentDescription="Tauschen"
            android:scaleType="centerInside"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="#E30613"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Aktualisieren"
            android:scaleType="centerInside"
            android:padding="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="#E0E0E0" />

    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_no_connections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#757575"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="Keine Verbindungen" />

    <LinearLayout
        android:id="@+id/connections_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Connection 1 -->
        <LinearLayout
            android:id="@+id/connection_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F5F5F5"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conn1_train"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="ðŸš† Zug" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/conn1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#757575"
                        android:textSize="11sp"
                        android:text="Ab: --:--" />

                    <TextView
                        android:id="@+id/conn1_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#E30613"
                        android:textSize="11sp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/conn1_alarm_10"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="â°-10"
                android:textSize="10sp"
                android:background="#E30613"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/conn1_alarm_15"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="4dp"
                android:text="â°-15"
                android:textSize="10sp"
                android:background="#E30613"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Connection 2 -->
        <LinearLayout
            android:id="@+id/connection_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F5F5F5"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conn2_train"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="ðŸš† Zug" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/conn2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#757575"
                        android:textSize="11sp"
                        android:text="Ab: --:--" />

                    <TextView
                        android:id="@+id/conn2_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#E30613"
                        android:textSize="11sp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/conn2_alarm_10"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="â°-10"
                android:textSize="10sp"
                android:background="#E30613"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/conn2_alarm_15"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="4dp"
                android:text="â°-15"
                android:textSize="10sp"
                android:background="#E30613"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Connection 3 -->
        <LinearLayout
            android:id="@+id/connection_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F5F5F5"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conn3_train"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="ðŸš† Zug" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/conn3_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#757575"
                        android:textSize="11sp"
                        android:text="Ab: --:--" />

                    <TextView
                        android:id="@+id/conn3_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#E30613"
                        android:textSize="11sp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/conn3_alarm_10"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="â°-10"
                android:textSize="10sp"
                android:background="#E30613"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/conn3_alarm_15"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="4dp"
                android:text="â°-15"
                android:textSize="10sp"
                android:background="#E30613"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#757575"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:text="" />

</LinearLayout>
