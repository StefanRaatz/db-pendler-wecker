<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default: HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow HTTP for internal db-vendo-api (VPN network) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.128.70</domain>
    </domain-config>
</network-security-config>
